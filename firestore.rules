service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permitir leitura pública de todos os documentos dentro da coleção "versions"
    match /versions/{versionId} {
      allow read: if true;  // Qualquer pessoa pode ler qualquer documento da coleção "versions"
      allow write: if request.auth != null;  // Somente usuários autenticados podem escrever
    }

  }
}
